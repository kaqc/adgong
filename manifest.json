{
  "name": "Ad and Tracker Blocker",
  "version": "1.0",
  "description": "Blocks ads and trackers and shows the number of blocked items.",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Ad and Tracker Blocker",
    "default_popup": "popup.html"
  }
}
